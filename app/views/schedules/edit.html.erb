<h1>スケジュール編集</h1>

<%= form_for @schedule do |f| %>
  <% if @schedule.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@schedule.errors.count, "error") %> prohibited this schedule from being saved:</h2>
      <ul>
        <% @schedule.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :start_time %>
    <%= f.date_field :start_time %>
  </div>

  <div class="field">
    <%= f.label :end_time %>
    <%= f.date_field :end_time %>
  </div>

  <div class="field">
    <%= f.label :all_day %>
    <%= f.check_box :all_day %>
  </div>

  <div class="field">
    <%= f.label :schedule_memo %>
    <%= f.text_area :memo %>
  </div>

  <div class="actions">
    <%= f.submit "更新する" %>
  </div>
<% end %>

<%= link_to "戻る", schedules_path %>
