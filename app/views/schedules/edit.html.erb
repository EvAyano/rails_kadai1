<%= render "shared/partial" %>
<!-- app/views/schedules/edit.html.erb -->
 <div class="container"> 
  <h2>スケジュール編集</h2>

  <%= form_for @schedule do |f| %>
    <% if @schedule.errors.any? %>
      <div id="error_explanation">
        <h3><%= pluralize(@schedule.errors.count, "error") %>  以下のエラーによりこのスケジュールは保存できませんでした:</h3>
        <ul>
          <% @schedule.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= f.label :title,"タイトル"%>
      <%= f.text_field :title %>
    </div>

    <div class="field">
      <%= f.label :start_time,"開始日" %>
      <%= f.date_field :start_time %>
    </div>

    <div class="field">
      <%= f.label :end_time,"終了日" %>
      <%= f.date_field :end_time %>
    </div>

    <div class="field">
      <%= f.label :all_day,"終日" %>
      <%= f.check_box :all_day %>
    </div>

    <div class="field">
      <%= f.label :schedule_memo,"スケジュールメモ" %>
      <%= f.text_area :memo %>
    </div>

    <div class="actions">
      <%= f.submit "更新する" %>
    </div>
  <% end %>

  <button><%= link_to "一覧へ", schedules_path %></button>
 </div> 